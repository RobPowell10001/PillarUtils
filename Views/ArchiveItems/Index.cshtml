@model PaginatedList<ArchiveItem>

@{
    ViewData["Title"] = "Renewal";
}

<h1>Clients With Overdue Renewal Notifications</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Name</th>
            <th>Client</th>
            <th>RenewalDate</th>
            <th>FolderName</th>
            <th>DriveName</th>
            <th>ImportSourcePath</th>
            <th>FileFormat</th>
            <th>SourceDate</th>
            <th>FileChecked</th>
            <th>NotificationSent</th>
            <th>ReadyToDelete</th>
            <th>isDeleted</th>
            <th>Format</th>
            <th>Codec</th>
            <th>Duration</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Client</td>
                <td>@item.RenewalDate</td>
                <td>@item.FolderName</td>
                <td>@item.DriveName</td>
                <td>@item.ImportSourcePath</td>
                <td>@item.FileFormat</td>
                <td>@item.SourceDate</td>
                <td>@item.FileChecked</td>
                <td>@item.NotificationSent</td>
                <td>@item.ReadyToDelete</td>
                <td>@item.isDeleted</td>
                <td>@item.Format</td>
                <td>@item.Codec</td>
                <td>@item.Duration</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Archive pagination">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-route-page="@(Model.PageIndex - 1)">Previous</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">
                Page @Model.PageIndex of @Model.TotalPages (@Model.TotalCount items)
            </span>
        </li>
        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-route-page="@(Model.PageIndex + 1)">Next</a>
        </li>
    </ul>
</nav>
