@model Client

@{
    ViewData["Title"] = "Notify";
}

<h1>Notify</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClientCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientCode)
        </dd>
        <dt class="col-sm-2">
            Contacts
        </dt>
        <dd class="col-sm-10">
            @if (Model.Contacts != null && Model.Contacts.Any())
            {
                <ul>
                    @foreach (var contact in Model.Contacts)
                    {
                        <li>@contact.FirstName @contact.LastName (@contact.Email)</li>
                    }
                </ul>
            }
            else
            {
                <span class="text-muted">No contacts available.</span>
            }
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h4>Overdue Items</h4>
@if (Model.ArchiveItems != null && Model.ArchiveItems.Cast<ArchiveItem>().Any())
{
    <h4 class="mt-4">Archive Items (@Model.ArchiveItems.Count())</h4>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Title</th>
                <th>Source Date</th>
                <th>Renewal Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ArchiveItems.OrderBy(a => a.RenewalDate).ThenBy(a => a.Name))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@(item.SourceDate?.ToString("yyyy-MM-dd") ?? "—")</td>
                    <td>@(item.RenewalDate?.ToString("yyyy-MM-dd") ?? "—")</td>
                    <td class="text-end">
                        <a asp-controller="ArchiveItems" asp-action="Details" asp-route-id="@item.Id">View</a>
                        |
                        <a asp-controller="ArchiveItems" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        No archive items for this client yet.
    </div>
}
